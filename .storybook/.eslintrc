{
  "overrides": [
    {
      "files": [
        "*.mts",
        "*.cts",
        "*.tsx"
      ],
      "extends": [
        "love",
        "plugin:react/recommended"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "tsconfig.json",
        "ecmaFeatures": {
          "jsx": true
        }
      },
      "plugins": [
        "@typescript-eslint",
        "react"
      ],
      "settings": {
        "react": {
          "version": "detect"
        }
      }
    }
  ]
}
