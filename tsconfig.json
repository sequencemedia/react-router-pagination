{
  "compilerOptions": {
    "jsx": "react",
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "#pagination": [
        "src/pagination"
      ],
      "#pagination/*": [
        "src/pagination/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    ".storybook/**/*"
  ]
}
