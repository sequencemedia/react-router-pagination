{
  "extends": [
    "standard-with-typescript",
    "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "@typescript-eslint",
    "react"
  ],
  "overrides": [
    {
      "files": [
        "*.mjs",
        "*.cjs"
      ],
      "extends": "standard",
      "parser": "@babel/eslint-parser",
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
